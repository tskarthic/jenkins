pipeline {
    agent any

    stages {
        stage ('Compile Stage') {

            steps {
                withMaven(maven : 'maven_3_5_3') {
                    bat 'mvn -f jenkins-pipeline-example/pom.xml clean compile'
                }
            }
        }

        stage ('Testing Stage') {

            steps {
                withMaven(maven : 'maven_3_5_3') {
                    bat 'mvn -f jenkins-pipeline-example/pom.xml test'
                }
            }
        }


        stage ('Deployment Stage') {
            steps {
                withMaven(maven : 'maven_3_5_3') {
                    bat 'mvn -f jenkins-pipeline-example/pom.xml deploy'
                }
            }
        }
    }
}